// frontend/src/app/api/client/auth/verify/route.ts
import { NextRequest, NextResponse } from 'next/server';
import { getBackendUrl, forwardCookies } from '@/lib/backend-config';

export async function GET(request: NextRequest) {
  try {
    const requestCookies = request.headers.get('cookie') || '';
    
    console.log('üîç Client verify API - checking session');
    
    const backendUrl = `${getBackendUrl()}/api/client/auth/verify`;
    console.log('Backend URL:', backendUrl);
    
    const response = await fetch(backendUrl, {
      method: 'GET',
      headers: {
        'Content-Type': 'application/json',
        'Cookie': requestCookies,
        'User-Agent': request.headers.get('user-agent') || 'VybezTribe-App',
      },
      credentials: 'include',
      cache: 'no-store'
    });
    
    console.log('üì° Client verify status:', response.status);
    
    const data = await response.json();
    console.log('Verify data:', { success: data.success, isAuthenticated: data.isAuthenticated });
    
    const nextResponse = NextResponse.json(data, { 
      status: response.status,
      headers: { 'Cache-Control': 'no-cache, no-store, must-revalidate' }
    });
    
    forwardCookies(response, nextResponse);
    
    return nextResponse;
  } catch (error) {
    console.error('‚ùå Client verify API error:', error);
    
    return NextResponse.json({
      success: false,
      isAuthenticated: false,
      isAnonymous: true,
      user: null,
      client_id: null,
      csrf_token: null,
      message: error instanceof Error ? error.message : 'Session check failed'
    }, { 
      status: 500,
      headers: { 'Cache-Control': 'no-cache, no-store, must-revalidate' }
    });
  }
}
